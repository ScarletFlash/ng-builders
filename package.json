    "@angular/compiler-cli": "^13.0.0",
    "@angular/core": "^13.0.0",
    "@angular/platform-browser": "^13.0.0",
    "@angular/platform-browser-dynamic": "^13.0.0",
    "@npm/types": "1.0.1",
    "@types/jest": "^27.0.0",
    "@types/madge": "^5.0.0",
    "@types/node": "^16.0.0",
    "cspell": "^5.0.0",
    "esbuild": "^0.14.0",
    "jest": "^27.0.0",
    "madge": "^5.0.0",
    "prettier": "latest",
    "rxjs": "^7.4.0",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "<4.5.0",
    "typescript-json-schema": "^0.50.0",
    "zone.js": "~0.11.0"
  }
